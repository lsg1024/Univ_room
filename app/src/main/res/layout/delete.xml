<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="#FAEEEE"
    android:paddingBottom="20dp"
    android:background="@drawable/detail_dialog">

    <TextView
        android:id="@+id/del_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="삭제하시겠습니까?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/del_accept"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="확인"
        android:textColor="@color/white"
        android:background="@drawable/noside_white_edge"
        android:backgroundTint="#F2594B"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/del_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/del_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/del_cancel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="취소"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F2594B"
        android:textColor="@color/white"
        android:background="@drawable/noside_white_edge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/del_accept"
        app:layout_constraintTop_toBottomOf="@+id/del_title" />

</androidx.constraintlayout.widget.ConstraintLayout>